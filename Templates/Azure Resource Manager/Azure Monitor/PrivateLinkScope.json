{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "defaultLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The default location for all resources."
      }
    },
    "plsIngestionAccessMode": {
      "type": "string",
      "allowedValues": [
        "Open",
        "PrivateOnly"
      ],
      "metadata": {
        "description": "The access mode for the ingestion endpoint of the private link scope."
      }
    },
    "plsQueryAccessMode": {
      "type": "string",
      "allowedValues": [
        "Open",
        "PrivateOnly"
      ],
      "metadata": {
        "description": "The access mode for the query endpoint of the private link scope."
      }
    }
  },
  "functions": [],
  "variables": {
    "randomString": "[toLower(uniqueString(resourceGroup().id))]",
    "resourceNameSuffix": "-AMPLS"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2022-09-01",
      "name": "[concat('VNET', variables('resourceNameSuffix'))]",
      "location": "[parameters('defaultLocation')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "192.168.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "Main",
            "properties": {
              "addressPrefix": "192.168.1.0/24"
            }
          }
        ]
      }
    },
    {
      "type": "microsoft.insights/privateLinkScopes",
      "apiVersion": "2021-07-01-preview",
      "name": "[concat('PLS', variables('resourceNameSuffix'))]",
      "location": "global",
      "properties": {
        "accessModeSettings": {
          "ingestionAccessMode": "[parameters('plsIngestionAccessMode')]",
          "queryAccessMode": "[parameters('plsQueryAccessMode')]"
        }
      }
    },
    {
      "type": "microsoft.network/privateEndpoints",
      "apiVersion": "2022-09-01",
      "name": "[concat('PLE', variables('resourceNameSuffix'))]",
      "location": "[parameters('defaultLocation')]",
      "properties": {
        "customNetworkInterfaceName": "[concat('PLE', variables('resourceNameSuffix'), '-NIC')]",
        "privateLinkServiceConnections": [
          {
            "name": "[concat('PE', variables('resourceNameSuffix'))]",
            "properties": {
              "groupIds": [
                "azuremonitor"
              ],
              "privateLinkServiceId": "[resourceId('Microsoft.Insights/privateLinkScopes', concat('PLS', variables('resourceNameSuffix')))]"
            }
          }
        ],
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', concat('VNET', variables('resourceNameSuffix')), 'Main')]"
        }
      }
    },
    {
      "type": "microsoft.network/privatednszones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.monitor.azure.com",
      "location": "global",
      "properties": {}
    },
    {
      "type": "microsoft.network/privatednszones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.oms.opinsights.azure.com",
      "location": "global",
      "properties": {}
    },
    {
      "type": "microsoft.network/privatednszones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.ods.opinsights.azure.com",
      "location": "global",
      "properties": {}
    },
    {
      "type": "microsoft.network/privatednszones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.agentsvc.azure-automation.net",
      "location": "global",
      "properties": {}
    },
    {
      "type": "microsoft.network/privatednszones",
      "apiVersion": "2018-09-01",
      "name": "privatelink.blob.core.windows.net",
      "location": "global",
      "properties": {}
    },
    {
      "type": "microsoft.network/privatednszones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat('privatelink.monitor.azure.com/', variables('randomString'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('microsoft.network/privatednszones', 'privatelink.monitor.azure.com')]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', concat('VNET', variables('resourceNameSuffix')))]"
        }
      }
    },
    {
      "type": "microsoft.network/privatednszones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat('privatelink.oms.opinsights.azure.com/', variables('randomString'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('microsoft.network/privatednszones', 'privatelink.oms.opinsights.azure.com')]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', concat('VNET', variables('resourceNameSuffix')))]"
        }
      }
    },
    {
      "type": "microsoft.network/privatednszones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat('privatelink.ods.opinsights.azure.com/', variables('randomString'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('microsoft.network/privatednszones', 'privatelink.ods.opinsights.azure.com')]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', concat('VNET', variables('resourceNameSuffix')))]"
        }
      }
    },
    {
      "type": "microsoft.network/privatednszones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat('privatelink.agentsvc.azure-automation.net/', variables('randomString'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('microsoft.network/privatednszones', 'privatelink.agentsvc.azure-automation.net')]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', concat('VNET', variables('resourceNameSuffix')))]"
        }
      }
    },
    {
      "type": "microsoft.network/privatednszones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat('privatelink.blob.core.windows.net/', variables('randomString'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('microsoft.network/privatednszones', 'privatelink.blob.core.windows.net')]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', concat('VNET', variables('resourceNameSuffix')))]"
        }
      }
    },
    {
      "type": "microsoft.network/privateEndpoints/privateDnsZoneGroups",
      "apiVersion": "2022-09-01",
      "name": "[concat('PE', variables('resourceNameSuffix'), '/default')]",
      "location": "[parameters('defaultLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateEndpoints', concat('PLE', variables('resourceNameSuffix')))]"
      ],
      "properties": {
        "privateDnsZoneConfigs": [
          {
            "name": "[replace('privatelink.monitor.azure.com', '.', '-')]",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.monitor.azure.com')]"
            }
          },
          {
            "name": "[replace('privatelink.oms.opinsights.azure.com', '.', '-')]",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.oms.opinsights.azure.com')]"
            }
          },
          {
            "name": "[replace('privatelink.monitor.azure.com', '.', '-')]",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.monitor.azure.com')]"
            }
          },
          {
            "name": "[replace('privatelink.monitor.azure.com', '.', '-')]",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.monitor.azure.com')]"
            }
          },
          {
            "name": "[replace('privatelink.monitor.azure.com', '.', '-')]",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.monitor.azure.com')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}